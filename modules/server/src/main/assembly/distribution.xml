
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <!--<id>distribution</id>-->
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${appassembler.basedir}/conf</directory>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*.zip</exclude>
                <exclude>maven-metadata-appassembler.xml</exclude>
            </excludes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/logs</directory>
            <outputDirectory>logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>madrona-server</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>wrapper-linux-x86-32</include>
                <include>wrapper-linux-x86-64</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <dependencySets>
    </dependencySets>
</assembly>
