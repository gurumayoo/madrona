<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/WEB-INF/decorators">
    <excludes>
        <pattern>/resources/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/META-INF/*</pattern>
    </excludes>

    <decorator name="loginLayout" page="login-decorator.jsp">
        <pattern>/</pattern>
        <pattern>*/login</pattern>
        <pattern>*/sign-up</pattern>
    </decorator>

    <decorator name="indexLayout" page="dashboard-decorator.jsp">
        <pattern>*/*</pattern>
    </decorator>

</decorators>

